{% set matrixId = attribute[1] %}
{{ matrixId }}
{% set matrix = anu.matrix.getMatrixByName(matrixId) %}
{% set matrixAttributes =  matrix.defineAttributes() %}
{% for index, attributes in matrixAttributes %}
    <button class="btn btn-default" ng-click="addMatrixElement('{{ index }}', '{{ key }}')" name="{{ index }}" value="{{ index }}">{{ index }}</button>
{% endfor %}


<ul id="{{ class }}{{ entry.id }}{{ key }}" ui-sortable="sortableMatrix" ng-model="matrixElements['{{ key }}']" class="panel-group" style="padding-left: 0px; border: 1px solid #cccccc; border-radius: 4px;">
    <li ng-repeat="item in matrixElements['{{ key }}']" class="panel panel-default">
        <div class="panel-heading">
            <i class="fa fa-arrows move" aria-hidden="true"></i>
            <span>
                <b>{[{ item.title }]}</b>
            </span>

            <a href=""  ng-click="removeMatrixElement(item, '{{ key }}')">
                <i class="fa fa-trash-o" aria-hidden="true"></i>
            </a>
        </div>
        <div class="panel-body" ng-repeat="(index, key) in item.attributes">
            <div thin-directive="{[{key[0]}]}" item-info="item"> </div>
        </div>
    </li>
</ul>