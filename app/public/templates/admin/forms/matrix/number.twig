<div class="form-group">
    <label for="{[{htmlPrefix}]}{[{ index }]}">{[{ $root.$$childTail.getFieldTitle(attributes, index) }]}</label>
    <input type="number"
           id="{[{htmlPrefix}]}{[{ index }]}"
           ng-model="datasource"
           name="{[{htmlPrefix}]}{[{ index }]}"
           class="form-control"
           string-to-number
           ng-blur="$root.$$childTail.resetError(index)"
           ng-required="true"
           required
    >
</div>