<div class="form-group" ng-class="{error: rootScope[rootScope.form][htmlPrefix + index].$invalid && rootScope[rootScope.form][htmlPrefix + index].$dirty}">
    <label for="{[{::htmlPrefix}]}{[{ ::index }]}">{[{ ::rootScope.getFieldTitle(attributes, index) }]}</label>
    <input type="text"
           id="{[{::htmlPrefix}]}{[{ ::index }]}"
           ng-model="datasource"
           name="{[{::htmlPrefix}]}{[{ ::index }]}"
           class="form-control"
           unique="{[{::index}]}"
           set-slug="{[{::index}]}"
           min_len="attributes"
           max_len="attributes"
    >

    <ul class="errors" ng-show="rootScope[rootScope.form][htmlPrefix + index].$dirty" ng-cloak>
        <li ng-show="rootScope[rootScope.form][htmlPrefix + index].$error.unique">
            Dieser Wert wurde bereits vergeben
        </li>
        <li ng-show="rootScope[rootScope.form][htmlPrefix + index].$error.max_len">
            Zu viele Zeichen
        </li>
        <li ng-show="rootScope[rootScope.form][htmlPrefix + index].$error.min_len">
            Nicht genug zeichen
        </li>
    </ul>
</div>
