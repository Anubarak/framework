<div class="form-group" ng-class="{error: $root.$$childTail[$root.$$childTail.form][htmlPrefix + index].$invalid}">
    <label for="{[{ index }]}">{[{ index }]}</label>
    <ng-quill-editor
            theme="snow"
            id="{[{ index }]}"
            ng-model="datasource"
            name={[{index}]}"
            ng-blur=""
            on-content-changed="myCallback(editor)"
            on-editor-created="$root.$$childTail.editorCreated(editor, '{[{index}]}')"
    >

    </ng-quill-editor>

</div>