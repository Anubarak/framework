    <small class="form-text text-muted">
        Mindestlänge der Buchstaben
    </small>
    <input type="text"
           id="minLength"
           ng-model="fieldOptions.minLength"
           name="minLength"
           class="form-control"
    >
</div>


<div class="form-group">
    <label for="maxLenght">Maximallänge</label><br>
