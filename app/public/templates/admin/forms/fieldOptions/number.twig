<!-- start min-lenght -->
<div class="form-group" ng-class="{error: fieldForm.minLength.$invalid}">
    <label for="minLenght">Mindestgröße</label><br>
    <small class="form-text text-muted">
        Kleinste Zahl
    </small>
    <input type="number"
           id="minLength"
           ng-model="fieldOptions.minLength"
           name="minLength"
           ng-minlength="0"
           class="form-control"
    >
    <ul class="errors" ng-cloak>
        <li ng-show="fieldForm.maxLenght.$error.number">
            Nur Zahlen sind erlaubt
        </li>
    </ul>
</div>
<!-- end min lenght -->

<div class="form-group" ng-class="{error: fieldForm.maxLength.$invalid}">
    <label for="maxLenght">Maximalgröße</label><br>
    <small class="form-text text-muted">
        Größte mögliche Zahl
    </small>
    <input type="number"
           id="maxLength"
           ng-model="fieldOptions.maxLength"
           name="maxLength"
           ng-minlength="0"
           class="form-control"
    >
    <ul class="errors" ng-cloak>
        <li ng-show="fieldForm.maxlength.$error.number">
            Nur Zahlen sind erlaubt
        </li>
    </ul>
</div>

<div class="form-group" ng-class="{error: fieldForm.depth.$invalid}">
    <label for="maxLenght">Nachkommastellen</label><br>
    <small class="form-text text-muted">
        Anzahl der Stellen hinter dem Komma
    </small>
    <input type="number"
           id="depth"
           ng-model="fieldOptions.depth"
           name="depth"
           class="form-control"
           ng-minlength="0"
           ng-maxlength="1"
    >
    <ul class="errors" ng-cloak>
        <li ng-show="fieldForm.depth.$error.maxlength">
            Maximale Anzahl darf 9 nicht überschreiten
        </li>
        <li ng-show="fieldForm.depth.$error.number">
            Nur Zahlen sind erlaubt
        </li>
    </ul>
</div>