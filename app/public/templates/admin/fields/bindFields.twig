{% extends 'admin/layout/site.twig' %}
{% set pageHeadline = 'Feld Layout' %}
{% block content %}


    <script type="text/ng-template" id="/tpl.html">
       <li class="list-group-item">{[{ ::e.title }]}</li>
    </script>

    <div ng-controller="bindFieldController" ng-cloak>
        <label>Feld Layout {{ record.name }}</label>
        <div class="">
            <div class="pull-left" ng-repeat="(tabName, tab) in data.fields" style="padding-left: 5px;padding-right: 5px;">
                <label class="pull-left">{[{ ::tabName }]}</label><br>
                <ul class="list-group list-group-small sortable pull-left"  ui-sortable="sortableOptions" ng-model="tab">
                    <id-to-list  ng-repeat="item in tab" item="item" list="fields" template-url="/tpl.html"></id-to-list>
                </ul>
            </div>
        </div>
        <div class="clearfix">

        </div>

        <div class="pull-left">
            <label>Freie Felder</label>
            <ul class="list-group list-group-small sortable" ui-sortable="sortableOptions" ng-model="leftFields">
                <id-to-list  ng-repeat="item in leftFields" item="item" list="fields" template-url="/tpl.html"></id-to-list>
            </ul>
        </div>

        <button ng-click="send();" class="pull-right btn btn-danger">Senden</button>
    </div>
{% endblock %}

{% includeJsFile 'bindFieldController.js'%}